{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/index.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 35,
      "functions": 40,
      "lines": 45,
      "statements": 50
    }
  },
  "coverageReporters": ["clover", "json", "lcov", "text"],
  "moduleDirectories": ["node_modules", "<rootDir>"]
}
